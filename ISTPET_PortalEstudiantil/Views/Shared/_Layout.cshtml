@inject ISessionAlumnos _auth;
@{
    var _version = $"?v={DateTime.Now.Ticks}";
}
<!DOCTYPE html>
<html lang="es-ec">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> ISTPET: PORTAL ESTUDIANTIL @Convert.ToString(ViewData["Title"])?.ToUpper()</title>
    <link rel="icon" type="image/png" href="~/template/img/icono.png">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />
    <link href="~/utilities/bootstrap-icons-1.8.1/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/template/css/custom-scrollbar.css" rel="stylesheet" />
    <link id="pagestyle" href="~/template/css/material-dashboard.css@_version" rel="stylesheet" />
    <link href="~/utilities/toast/style.css@_version" rel="stylesheet" />
    <script defer src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <script defer src="~/template/js/core/popper.min.js"></script>
    <script defer src="~/template/js/core/bootstrap.min.js"></script>
    <script defer src="~/utilities/axios/axios.min.js@_version"></script>
    <script>const _route = top.location.href.toLowerCase().indexOf("localhost:") >= 0 ? "../../" : "../../../appEstudiantes/"</script>
    <script defer src="~/utilities/toast/sweetalert2.all.min.js"></script>
    <script defer src="~/utilities/toast/siiimple-toast.min.js"></script>
    <script defer src="~/utilities/toast/toast.js@_version"></script>
    <script defer>var _token = `@(Html.AntiForgeryToken())`;</script>
    <script defer src="~/js/token.js"></script>
    <script defer src="~/utilities/forms.js@_version"></script>
    <script defer src="~/template/js/material-dashboard.js?v=3.0.2"></script>
    <script defer src="~/js/siteLayout.js@_version"></script>
</head>
<body class="g-sidenav-show  bg-gray-400">
      <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-1 fixed-start ms-1 bg-gradient-dark" id="sidenav-main">
    <div class="sidenav-header">
      <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
      <a class="navbar-brand2 m-0" href="~/">
        <img src="~/template/img/logo-blanco.png" width="127"  alt="ISTPET">
      </a>
    </div>
    <hr class="horizontal light mt-0 mb-2">
    <div class="collapse navbar-collapse  w-auto  max-height-vh-100" style="height: 73vh !important;" id="sidenav-collapse-main">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link text-white" data-menu='sistema' href="~/">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="bi-house text-lg"></i>
            </div>
            <span class="nav-link-text ms-1">Inicio</span>
          </a>
        </li>
        <li class="nav-item mt-3">
          <h6 class="ps-4 ms-2 text-uppercase text-xs text-white font-weight-bolder opacity-8">Académico</h6>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" data-menu='calificaciones' href="~/Sistema/Calificaciones">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="bi-file-earmark-spreadsheet text-lg"></i>
            </div>
            <span class="nav-link-text ms-1">Calificaciones</span>
          </a>
        </li>
        <li class="nav-item mt-3">
          <h6 class="ps-4 ms-2 text-uppercase text-xs text-white font-weight-bolder opacity-8">Servicios</h6>
        </li>
                <li class="nav-item">
          <a class="nav-link text-white" href="https://elibro.net/es/lc/institutotraversari/login_usuario/" target="_blank">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="bi-book text-lg"></i>
            </div>
            <span class="nav-link-text ms-1">Biblioteca virtual</span>
          </a>
        </li>
                <li class="nav-item">
          <a class="nav-link text-white" href="https://portal.office.com/" target="_blank">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="bi-envelope-check text-lg"></i>
            </div>
            <span class="nav-link-text ms-1">Correo institucional</span>
          </a>
        </li>
      </ul>
    </div>

  </aside>
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <nav class="navbar navbar-main position-sticky bg-white t-4 top-1 z-index-sticky navbar-expand-lg px-0 mx-4 border-radius-xl" id="navbarBlur" navbar-scroll="true">
      <div class="container-fluid py-1 px-3">
        <div class="collapse navbar-collapse mt-sm-0  me-md-0 me-sm-4" id="navbar">
          <div class="ms-md-auto pe-md-3 d-flex align-items-center">
            <div class="nav-item d-xl-none ps-3 d-flex align-items-center">
              <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
                <div class="sidenav-toggler-inner">
                  <i class="sidenav-toggler-line"></i>
                  <i class="sidenav-toggler-line"></i>
                  <i class="sidenav-toggler-line"></i>
                </div>
              </a>
            </div>
          </div>
          <ul class="navbar-nav  justify-content-end">

            <li class="nav-item dropdown pe-2 d-flex align-items-center">
              <a href="javascript:;" class="nav-link text-body p-0" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi-check-circle-fill cursor-pointer text-success"></i>
                <span class="d-sm-inline  text-dark text-navbar" >@_auth.getName()</span>
              </a>
              <ul class="dropdown-menu  dropdown-menu-end  px-1 py-3 me-sm-n4" style="min-width:235px"  aria-labelledby="dropdownMenuButton">
                <li class="mb-2">
                  <a class="dropdown-item border-radius-md" href="~/Sistema/Perfil">
                    <div class="d-flex py-1">
                      <div class="d-flex flex-column justify-content-center">
                        <h6 class="text-sm font-weight-normal mb-1">
                           <span class="font-weight-bold">Perfill</span>
                        </h6>
                        <p class="text-xs text-secondary mb-0">
                          Editar cuenta
                        </p>
                      </div>
                    </div>
                  </a>
                </li>
                <li class="mb-2">
                  <a class="dropdown-item border-radius-md" onclick="salir()" href="javascript:;">
                    <div class="d-flex py-1">
                      <div class="d-flex flex-column justify-content-center">
                        <h6 class="text-sm font-weight-normal mb-1">
                          <span class="font-weight-bold">Salir</span>
                        </h6>
                        <p class="text-xs text-secondary mb-0">
                          Cerrar sesión
                        </p>
                      </div>
                    </div>
                  </a>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->
    <div class="container-fluid pt-2" >
      <div class="row main">
            @RenderBody()
      </div>
      <div class="footer">
          <div class="row ">
              <div class="w-100  no-wrap text-footer ">
                   <span class="pe-1">© 2022 </span><a href="https://institutotraversari.edu.ec/" target="_blank">Instituto Superior Tecnológico Mayor Pedro Traversari</a>
                </div>
            </div>
        </div>
      </div>
  </main>
</body>
</html>
