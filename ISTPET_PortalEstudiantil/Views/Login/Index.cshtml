@{
    Layout = null;
    var _version = $"?v={DateTime.Now.Ticks}";
}

<!DOCTYPE html>
<html lang="es-ec">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> ISTPET: PORTAL ESTUDIANTIL LOGIN</title>
    <link rel="icon" type="image/png" href="~/template/img/icono.png">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />
    <link href="~/utilities/bootstrap-icons-1.8.1/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/template/css/custom-scrollbar.css" rel="stylesheet" />
    <link id="pagestyle" href="~/template/css/material-dashboard.css@_version" rel="stylesheet" />
    <link href="~/utilities/toast/style.css@_version" rel="stylesheet" />
    @*Scripts*@
    <script defer src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <script defer src="~/template/js/core/popper.min.js"></script>
    <script defer src="~/template/js/core/bootstrap.min.js"></script>
    <script defer src="~/utilities/axios/axios.min.js@_version"></script>
    <script defer src="~/utilities/toast/sweetalert2.all.min.js"></script>
    <script defer src="~/utilities/toast/siiimple-toast.min.js"></script>
    <script defer src="~/utilities/toast/toast.js@_version"></script>
    <script defer>var _token = `@(Html.AntiForgeryToken())`;</script>
    <script defer src="~/js/router.js@_version"></script>
    <script defer src="~/utilities/forms.js@_version"></script>
    <script defer src="~/js/siteLogin.js@_version"></script>
</head>
<body class="bg-gray-200">
  <main class="main-content  mt-0">
    <div class="page-header align-items-start min-vh-100 bg-login" >
      <span class="mask bg-gradient-dark opacity-6"></span>
      <div class="container my-auto">
        <div class="row">
          <div class="col-lg-4 col-md-8 col-12 mx-auto">
            <div class="card z-index-0 fadeIn3 fadeInBottom">
              <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                  <h6 class="fw-bold text-center mt-2 mb-0 login-font">PORTAL ESTUDIANTIL</h6>
                  <div class="row mt-2">
                      <div class="text-center">
                          <img src="~/template/img/logo-blanco136.png"/> 
                      </div>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <form class="text-start" id="frm" enctype="multipart/form-data">
                  <div class="my-3">
                    <input type="text" placeholder="Usuario (Documento de identidad)" class="form-control" id="idAlumno" name="idAlumno" maxlength="14">
                  </div>
                  <div class="mb-3">
                    <input type="password" placeholder="Contraseña"  class="form-control" id="password" name="password" maxlength="20">
                  </div>
                  <div class="text-center">
                    <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">Ingresar</button>
                  </div>
                  <p class="mt-4 mb-0 p-0 text-sm text-center">
                    <span style="font-size:0.91em">¿Olvidaste tú contraseña?</span>
                  </p>
                  <p class="m-0 p-0 text-center text-sm">
                     <a style="font-size:0.91em" href="~/Login/RecuperarClave" class="text-primary text-gradient font-weight-bold">Recuperar contraseña</a>
                  </p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <footer class="footer position-absolute bottom-2 py-2 w-100">
        <div class="container">
          <div class="row align-items-center justify-content-lg-between">
            <div class="col-12 my-auto">
              <div class="text-center text-sm text-white footer-login">
                   <span class="pe-1">© 2022 </span><a class="text-white" href="https://institutotraversari.edu.ec/" target="_blank">Instituto Superior Tecnológico Mayor Pedro Traversari</a>
              </div>
            </div>

          </div>
        </div>
      </footer>
    </div>
  </main>

</body>
</html>

